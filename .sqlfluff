[sqlfluff]
dialect = mysql
max_line_length = 80

# Ignore certain rules, where:
# L001: Unnecessary trailing whitespace
# L002: Mixed indentation found
# L003: Expected newline between elements
# L004: Expected single space between keywords
# L009: Expected single space before/after comments
# L014: Line is too long
# L016: Line length exceeds max_line_length
# RF04: Keywords should not be used as identifiers
exclude_rules = L001,L002,L003,L004,L009,L014,L016,RF04

[sqlfluff:indentation]
tab_space_size = 4
indent_unit = space 